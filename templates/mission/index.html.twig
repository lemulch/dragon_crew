{% extends 'base.html.twig' %}

{% block title %}Hello MissionController!{% endblock %}

{% block body %}
    <main>

        <h1 id="gros-titre">Prochains Vols</h1>

        <section>
            <table>

                <thead>
                <tr class="mention">
                    <th colspan="1">Mission</th>
                    <th colspan="1">Charge utile</th>
                    <th colspan="1">Lanceurs</th>
                    <th colspan="1">Missions du lanceur</th>
                    <th colspan="1">Base de lancement</th>
                    <th colspan="1">Date et Heure</th>
                </tr>
                </thead>

                <tbody>

        {% for mission in missions %}

            <tr class="profil-mention">
                <td>{{ mission.usefullCharge }}</td>
                <td>{{ mission.usefullCharge }}</td>
                <td>{{ mission.launcher }}</td>
                <td>2</td>
                <td>{{ mission.spacialCenter }}</td>
                <td>{{ mission.launchTime }}</td>
            </tr>

        {% endfor %}







            </tbody>
        </table>

    </section>

    </main>

{% endblock %}
